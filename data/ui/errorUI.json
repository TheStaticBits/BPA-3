{
    "bgAlpha": 150,

    "positions": {
        "hidden": {
            "x": { "locked": "center", "margin": 0    },
            "y": { "locked": "end",    "margin": -200 },
            "hidden": true
        },

        "visible": {
            "x": { "locked": "center", "margin": 0 },
            "y": { "locked": "center", "margin": 0 },
            "hidden": false
        }
    },

    "defaultPos": "hidden",
    "transitionSpeed": 2,
    "transitionType": "ease",

    "size": "auto",
    
    "elements": {
        "images": {
            "bg": {
                "offset": [ 0, 0 ],
                "path": "res/ui/error/bg.png"
            }
        },
        "text": {
            "title": {
                "text": "[Recoverable/Non-recoverable] error:",
                "offset": [ 15, 15 ],
                "fontSize": 10,
                "color": [ 255, 255, 255 ]
            },
            "desc": {
                "text": "[error description]",
                "offset": [ 15, 30 ],
                "fontSize": 5,
                "color": [ 200, 200, 200 ],
                "wrapLength": 270
            },
            "errorMsg": {
                "text": "[error message]",
                "offset": [ 15, 45 ],
                "fontSize": 5,
                "color": [ 255, 255, 255 ],
                "wrapLength": 270
            }
        },
        "buttons": {
            "xButton": {
                "offset": [ 278, 15 ],
                
                "images": {
                    "inactive": "res/ui/error/xbutton.png",
                    "hover": "res/ui/error/xbuttonHover.png",
                    "pressed": "res/ui/error/xbuttonPress.png"
                }
            }
        }
    }
}