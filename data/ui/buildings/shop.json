{
    "positions": {
        "visible": {
            "x": { "locked": "end", "margin": 10 },
            "y": { "locked": "end", "margin": 0  }
        },

        "hidden": {
            "x": { "locked": "end", "margin": 10  },
            "y": { "locked": "end", "margin": -50 }
        }
    },

    "defaultPos": "visible",
    "transitionSpeed": 3,
    "transitionType": "ease",
    "layers": 2,

    "size": "auto",

    "elements": {
        "images": {
            "bg": {
                "offset": [ 0, 0 ],
                "path": "res/ui/shop/bg.png"
            },

            "outline": {
                "offset": [ 0, 0 ],
                "layer": 1,
                "path": "res/ui/shop/outline.png"
            }
        },
        
        "text": {

        },

        "buttons": {
            "openShop": {
                "offset": [ 250, -15 ],

                "images": {
                    "inactive": "res/buttons/exampleButton/inactive.png",
                    "hover": "res/buttons/exampleButton/hover.png",
                    "pressed": "res/buttons/exampleButton/pressed.png"
                },

                "textData": {
                    "text": "Shop",
                    "offset": [ 0.66, 0.33 ],
                    "fontSize": 5,
                    "color": [ 0, 0, 0 ]
                }
            },

            "left": {
                "offset": [ 4, 9 ],
                "layer": 1,

                "images": {
                    "inactive": "res/ui/shop/arrow.png"
                }
            },

            "right": {
                "offset": [ 264, 9 ],
                "layer": 1,
                
                "images": {
                    "inactive": "res/ui/shop/arrow.png"
                },

                "flip": [ true, false ]
            }
        }
    }
