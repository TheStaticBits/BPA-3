{
    "positions": {
        "visible": {
            "x": { "locked": "end", "margin": 10 },
            "y": { "locked": "end", "margin": 0  }
        },

        "hidden": {
            "x": { "locked": "end", "margin": 10  },
            "y": { "locked": "end", "margin": -50 }
        }
    },

    "defaultPos": "visible",
    "transitionSpeed": 9,
    "transitionType": "ease",
    "layers": 2,

    "size": "auto",

    "elements": {
        "images": {
            "bg": {
                "offset": [ 0, 0 ],
                "path": "res/ui/shop/bg.png"
            },

            "outline": {
                "offset": [ 0, 0 ],
                "layer": 1,
                "path": "res/ui/shop/outline.png"
            }
        },
        
        "text": {

        },

        "buttons": {
            "openShop": {
                "offset": [ 250, -15 ],

                "images": {
                    "inactive": "res/buttons/shopButton/inactive.png",
                    "hover": "res/buttons/shopButton/hover.png",
                    "pressed": "res/buttons/shopButton/pressed.png"
                },

                "textData": {
                    "text": "Shop",
                    "offset": [ 0.66, 0.66 ],
                    "fontSize": 10,
                    "color": [ 255, 255, 255 ]
                }
            },

            "left": {
                "offset": [ 7, 15 ],
                "layer": 1,

                "images": {
                    "inactive": "res/buttons/arrow/inactive.png",
                    "hover": "res/buttons/arrow/hover.png",
                    "pressed": "res/buttons/arrow/pressed.png"
                }
            },

            "right": {
                "offset": [ 261, 15 ],
                "layer": 1,
                
                "images": {
                    "inactive": "res/buttons/arrow/inactive.png",
                    "hover": "res/buttons/arrow/hover.png",
                    "pressed": "res/buttons/arrow/pressed.png"
                },

                "flip": [ true, false ]
            }
        }
    }
