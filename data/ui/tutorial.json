{
    "slides": 4,

    "positions": {
        "hidden": {
            "x": { "locked": "end",    "margin": -250 },
            "y": { "locked": "center", "margin": 0    },
            "hidden": true
        },

        "visible": {
            "x": { "locked": "center", "margin": 0 },
            "y": { "locked": "center", "margin": 0 },
            "hidden": false
        }
    },

    "defaultPos": "hidden",
    "transitionSpeed": 9,
    "transitionType": "ease",

    "bgAlpha": 150,
    "bgAlphaShowsPos": "visible",

    "size": "auto",

    "elements": {
        "images": {
            "bg": {
                "offset": [ 0, 0 ],
                "path": "res/ui/mainMenu/bg.png"
            },

            "0 image": {
                "offset": [ 125, 60 ],
                "path": "res/ui/tutorial/slide0.png",
                "centered": true,
                "scaled": false
            },

            "1 image": {
                "offset": [ 125, 62 ],
                "path": "res/ui/tutorial/slide1.png",
                "centered": true,
                "scaled": false
            }
        },

        "text": {
            "title": {
                "text": "Tutorial",
                "fontSize": 16,
                "offset": [ 125, 15 ],
                "color": [ 255, 255, 255 ],
                "centered": true
            },

            "slideNum": {
                "text": "Slide 1",
                "fontSize": 10,
                "offset": [ 125, 25 ],
                "color": [ 200, 200, 200 ],
                "centered": true
            },
            
            "0 text": {
                "text": "This is you, the player! Move using WASD or the arrow keys. You can only place buildings in a certain range around the player. When you've placed buildings down, move and touch them to open the building's upgrades & details menu!",
                "fontSize": 10,
                "offset": [ 125, 110 ],
                "color": [ 255, 255, 255 ],
                "centered": true,
                "wrapLength": 180
            },

            "1 text": {
                "text": "These are your resources. Gold can be continuously generated with the Gold Generator building, and Steam capacity can be increased with the Steam Generator building (only increases once upon placement). Buy a Treasure Chest building to increase your gold limit.",
                "fontSize": 10,
                "offset": [ 125, 117 ],
                "color": [ 255, 255, 255 ],
                "centered": true,
                "wrapLength": 180
            },

            "2 title": {
                "text": "Buildings",
                "fontSize": 16,
                "offset": [ 125, 45 ],
                "color": [ 255, 255, 255 ],
                "centered": true
            },

            "2 text": {
                "text": "In the shop, press 'buy' to buy a building. Click on the map to place the building there. To open the upgrades menu, touch the side of the building with the player. Here, you can read a description of the upgrades, see the cost, and upgrade the building. You can also sell for the original price of the building. Unit Spawners are unique, as you can choose which warrior it spawns in this menu (unlock warriors by upgrading it!)",
                "fontSize": 10,
                "offset": [ 125, 95 ],
                "color": [ 255, 255, 255 ],
                "centered": true,
                "wrapLength": 180
            },

            "3 title": {
                "text": "Dungeon",
                "fontSize": 16,
                "offset": [ 125, 45 ],
                "color": [ 255, 255, 255 ],
                "centered": true
            },

            "3 text": {
                "text": "Press the 'Dungeon' button in the top right or press shift to switch scenes. In the dungeon, the allied warriors (blue) that are spawned from your Unit Spawner building are spawned in the center and enemies (red) spawn in the corners. After all enemies in a wave have spawned, if you have no ally warriors in the dungeon.",
                "fontSize": 10,
                "offset": [ 125, 90 ],
                "color": [ 255, 255, 255 ],
                "centered": true,
                "wrapLength": 150
            }
        },

        "buttons": {
            "closeButton": {
                "offset": [ 233, 10 ],

                "images": {
                    "inactive": "res/buttons/xButton/inactive.png",
                    "hover": "res/buttons/xButton/hover.png",
                    "pressed": "res/buttons/xButton/pressed.png"
                }
            },

            "left": {
                "offset": [ 20, 75 ],

                "images": {
                    "inactive": "res/buttons/arrow/inactive.png",
                    "hover": "res/buttons/arrow/hover.png",
                    "pressed": "res/buttons/arrow/pressed.png"
                },

                "centered": true
            },

            "right": {
                "offset": [ 230, 75 ],

                "images": {
                    "inactive": "res/buttons/arrow/inactive.png",
                    "hover": "res/buttons/arrow/hover.png",
                    "pressed": "res/buttons/arrow/pressed.png"
                },

                "flip": [ true, false ],
                "centered": true
            }
        }
    }
}